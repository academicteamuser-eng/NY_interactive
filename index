    }

    /* Место для scorm-пакета - пока пустой iframe */
    #scorm-frame {
      width: 100%;
      height: 100%;
      border: none;
      border-radius: 15px;
    }

    /* Контейнер для снежинок слева и справа */
    .snow-container {
      position: absolute;
      top: 0;
