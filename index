<body>

  <h1>С наступающим Новым годом!</h1>

  <div id="content-wrapper">
    <!-- Левая колонка снежинок -->
    <div id="snow-left" class="snow-container"></div>

    <!-- Место под scorm задание -->
    <!-- Замените src на путь к вашему scorm-пакету -->
    <iframe id="scorm-frame" src="Your_SCORM_Package/index.html" allowfullscreen></iframe>

    <!-- Правая колонка снежинок -->
    <div id="snow-right" class="snow-container"></div>
  </div>

<script>
  // Падающие снежинки по бокам

  class Snowflake {
    constructor(container, xRange) {
      this.container = container;
      this.xRange = xRange; // [min, max] позиция по X в контейнере

      this.snowflake = document.createElement('div');
      this.snowflake.classList.add('snowflake');

      this.reset();

      this.container.appendChild(this.snowflake);
    }

    reset() {
      const size = Math.random() * 6 + 4; // 4-10 px
      this.snowflake.style.width = size + 'px';
      this.snowflake.style.height = size + 'px';

      this.x = Math.random() * (this.xRange[1] - this.xRange[0]) + this.xRange[0];
      this.y = -size; // старт сверху за пределами

      this.speedY = Math.random() * 0.7 + 0.3;
      this.speedX = (Math.random() - 0.5) * 0.3;

      this.snowflake.style.left = this.x + 'px';
      this.snowflake.style.top = this.y + 'px';
      this.snowflake.style.opacity = 0.7 + Math.random() * 0.3;
    }

    update() {
      this.y += this.speedY;
      this.x += this.speedX;

      this.snowflake.style.transform = `translate(${this.x}px, ${this.y}px)`;

      if (this.y > this.container.clientHeight) {
        this.reset();
      }
    }
  }

  function initSnow(containerId) {
    const container = document.getElementById(containerId);
    const snowflakes = [];
    const count = 30;

    for (let i = 0; i < count; i++) {
      snowflakes.push(new Snowflake(container, [0, container.clientWidth]));
    }

    function animate() {
      snowflakes.forEach(s => s.update());
      requestAnimationFrame(animate);
    }

    animate();
  }

  initSnow('snow-left');
  initSnow('snow-right');
</script>
</body>
