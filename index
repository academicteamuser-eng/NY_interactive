    }

    /* Заголовок — центр, объемный пушистый шрифт */
    h1 {
      margin: 40px 0 30px 0;
      font-size: 3rem;
      font-weight: 900;
      text-align: center;
      letter-spacing: 2px;
      color: #e0f0ff;
      /* объемный пушистый эффект */
      text-shadow:
        1px 1px 0 #aadaff,
        2px 2px 0 #81c7ff,
        3px 3px 4px #4a8ae0,
        0 0 10px #a1c6ff;
      user-select: none;
    }

    /* Контейнер для задания + падающих снежинок */
    #content-wrapper {
      position: relative;
      width: 90vw;
      max-width: 1000px;
      height: 600px;
      background: white;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
      overflow: hidden;
